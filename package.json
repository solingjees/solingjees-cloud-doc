{
  "name": "cloud-doc",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "author": {
    "name": "solingjees",
    "email": "1600346867@qq.com"
  },
  "dependencies": {
    "bootstrap": "^4.5.2",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^6.0.0",
    "ali-oss": "^6.16.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "buildMain": "webpack",
    "sdev": "nodemon --watch main.js --watch src/assets/menuTemplate.js  --exec \"electron .\"",
    "dev": "concurrently   \"wait-on http://localhost:3000 &&  electron .\" \"cross-env BROWSER=none npm start\"",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "release": "cross-env GH_TOKEN=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 electron-builder",
    "prerelease": "npm run build && npm run buildMain",
    "prepack": "npm run build && npm run buildMain",
    "predist": "npm run build && npm run buildMain"
  },
  "homepage": "./",
  "build": {
    "appId": "cloud-doc",
    "productName": "云笔记",
    "extends": null,
    "extraMetadata": {
      "main": "./build/main.js"
    },
    "directories": {
      "buildResources": "./src/assets"
    },
    "files": [
      "./build/**/**/*",
      "./src/views/settings/*",
      "./src/utils/uploadCloud.js"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "dmg": {
      "background": "./src/assets/appdmg.png",
      "icon": "./src/assets/icon.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 280,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 280,
          "type": "file"
        }
      ],
      "window": {
        "width": 500,
        "height": 500
      }
    },
    "win": {
      "target": [
        "msi",
        "nsis"
      ],
      "icon": "./src/assets/icon.ico",
      "artifactName": "${productName}-Web-Setup-${version}-${arch}.${ext}",
      "publisherName": "solingjees"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": false
    },
    "copyright": "Copyright © year ${author}"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "publish": [
    "github"
  ],
  "devDependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.30",
    "@fortawesome/free-brands-svg-icons": "^5.14.0",
    "@fortawesome/free-solid-svg-icons": "^5.14.0",
    "@fortawesome/react-fontawesome": "^0.1.11",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "classnames": "^2.2.6",
    "coffee-script": "^1.12.7",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "electron": "^10.4.7",
    "electron-builder": "^22.13.1",
    "electron-updater": "^4.3.9",
    "eslint-plugin-html": "^6.0.3",
    "eslint-plugin-react-hooks": "^4.1.0",
    "node-sass": "^4.14.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.3",
    "react-simplemde-editor": "^4.1.3",
    "tmp": "^0.2.1",
    "uuid": "^8.3.0",
    "wait-on": "^5.2.0",
    "webpack-cli": "^4.9.1"
  }
}
